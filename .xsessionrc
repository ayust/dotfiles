# regular cusor
xsetroot -cursor_name left_ptr

if [ -f "$HOME/.fehbg" ]; then
   eval "$(cat ~/.fehbg)"
fi

# Notification tray
trayer --edge top --align right --SetDockType true --SetPartialStrut false \
 --expand true --width 10 --transparent true --tint 0x494970 --height 1h &

sleep 0.3

# Network manager
if [ -x /usr/bin/nm-applet ] ; then
   nm-applet --sm-disable &
fi

# Bluetooth manager
if [ -x /usr/bin/bluetooth-applet ] ; then
   bluetooth-applet &
fi

# Power manager
if [ -x /usr/bin/gnome-power-manager ] ; then
   gnome-power-manager &
fi

# volume control
if [ -x /usr/bin/gnome-volume-control-applet ] ; then
   gnome-volume-control-applet &
fi
if [ -x /usr/bin/gnome-sound-applet ] ; then
   gnome-sound-applet &
fi

